{
  "name": "spellings",
  "scripts": {
    "postinstall": "elm-tooling install",
    "start": "concurrently \"postcss --watch tailwind.css -o ./public/style.css\" \"elm-live src/Main.elm --dir=./public --hot --open -- --output=public/main.js\"",
    "build": "postcss tailwind.css -o ./public/style.css && elm make src/Main.elm --optimize --output=public/main.js"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.2",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "elm-live": "^4.0.2",
    "elm-tooling": "^1.4.0",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "tailwindcss": "^3.1.6"
  }
}
